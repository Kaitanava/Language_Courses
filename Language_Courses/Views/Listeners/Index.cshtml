@model IEnumerable<Language_Courses.Models.Listener>

@{
    ViewData["Title"] = "Listeners";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listeners</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListenerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameListener)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassportData)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ListenerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameListener)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassportData)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ListenerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ListenerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ListenerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
