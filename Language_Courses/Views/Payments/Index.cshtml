@model Language_Courses.ViewModels.PaymentsViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaymentViewModel.PaymentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentViewModel.PaymentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentViewModel.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentViewModel.NameOfCourse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentViewModel.SurnameListener)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Payments) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentId)

            <td>
                @Html.DisplayFor(modelItem => item.PaymentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.NameOfCourse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Listener.Surname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PaymentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PaymentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PaymentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
